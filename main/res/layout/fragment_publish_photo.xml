<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/publish_photo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Photo Preview -->
        <ImageView
            android:id="@+id/iv_photo_preview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/publish_photo" />

        <Button
            android:id="@+id/btn_select_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sélectionner une photo"
            style="?attr/materialButtonOutlinedStyle" />

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/photo_description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="5" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Location Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Localisation"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Location display -->
        <TextView
            android:id="@+id/tv_location_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:text="Aucune localisation sélectionnée"
            android:textColor="?android:attr/textColorSecondary"
            android:minHeight="48dp"
            android:gravity="center_vertical" />

        <!-- Location buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_select_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Sélectionner sur la carte"
                style="?attr/materialButtonOutlinedStyle" />

            <Button
                android:id="@+id/btn_use_current_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Ma position"
                style="?attr/materialButtonOutlinedStyle" />

        </LinearLayout>

        <!-- Mini map preview -->
        <FrameLayout
            android:id="@+id/map_preview_container"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <fragment
                android:id="@+id/map_preview"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <!-- Photo Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/photo_type"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_photo_type_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- How to get there -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/how_to_get_there">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_how_to_get_there"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="4" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Public/Private -->
        <CheckBox
            android:id="@+id/cb_is_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Rendre cette photo publique"
            android:checked="true" />

        <!-- Share with groups -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Partager avec des groupes"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_selected_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Aucun groupe sélectionné"
            android:textColor="?android:attr/textColorSecondary" />

        <Button
            android:id="@+id/btn_select_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=" Sélectionner des groupes"
            style="?attr/materialButtonOutlinedStyle" />

        <!-- Publish Button -->
        <Button
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/publish" />

    </LinearLayout>

</ScrollView>

